span(style="font-family: verdana, geneva, sans-serif;")
  doctype html
  html(lang="en")
    head
      meta(charset="UTF-8")
      title Client Dashboard
      link(rel="stylesheet",  type='text/css', href="/stylesheets/aclient.css")
      script(defer, src='/javascripts/popup.js')
      script(defer, src='/javascripts/clientvalidation.js')
      //- Font Awesome Cdn Link -->
      link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
    body
      .container
        nav
          ul
            li
              a(href="/admin/", class="logo")
                span.nav-item DashBoard
            li
              a(href="/admin/clients")
                i.fas.fa-tasks
                span.nav-item clients 
            li
              a(href="/admin/developers")
                i.fas.fa-tasks
                span.nav-item developers 
            li
              a(href="/admin/projects")
                i.fas.fa-tasks
                span.nav-item projects   
            li
              a(href="/admin/tasks")
                i.fas.fa-tasks
                span.nav-item tasks
            li
              a(href="/", class="logout")
                i.fas.fa-sign-out-alt
                span.nav-item Log out
        section.main
                .main-top
                    h1 Clients 
                .main-body
                   .main-body
                    input.search-input(type="text", placeholder=" Search Client ")  
                    button.newclient-button(data-modal-target="#modal") New Client
                .modal#modal
                  .modal-header
                    .title New Client
                    button(data-close-button, class="close-button") &times;
                  .modal-body
                     form(id ='create-client-form'  action="/admin/createclient", method="get",)
                              .main-user-info
                                  .user-input-box
                                      label(for="fname =") First name 
                                      input(type="text", id="fname", name="FirstName", placeholder=" client name" required )
                                  .user-input-box
                                      label(for="lname ") Last name
                                      input(type="text", id="lname", name="LastName", placeholder="developer name " required)
                                  .user-input-box2
                                      label(for="email") Email
                                      input(type="email", id="email", name="EmailUser", placeholder="Enter Email" required)
                                  .user-input-box2
                                      label(for="password") Password
                                      input(type="text", id="password", name="Pass", placeholder="Enter password" required)
                                    
                                 //- if message
                                      .alert.alert-success
                                          p= message
                              .form-submit-btn
                                  input(type="submit", value="Create Client", id="create-client-button")

                .main-body2       
                  each client  in clients
                    .card 
                      .card-body 
                        p= `User # : ${client.Userid}`
                        p= `User type : ${client.userType}`
                        p= `First Name : ${client.FirstName}`
                        p= `Last Name : ${client.LastName}`
                        p= `Email : ${client.Email}`    
                        p= `Pass :${client.Pass}` 

                #overlay


             
                  
                        