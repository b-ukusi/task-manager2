    body
    .container
        nav
          div 
           h1
             img(src="/images/LOGO33.jpg", alt="Admin")
             Admin  
            ul
              li
                a(href="/admin/", class="logo")
                  h2 DashBoard
              li
                a(href="/admin/clients")
                  i.fas.fa-address-card 
                  span.nav-item Clients 
              li
                a(href="/admin/developers")
                  i.fas.fa-address-book
                  span.nav-item Developers 
              li
                a(href="/admin/projects")
                  i.fas.fa-cogs
                  span.nav-item Projects   
              li
                a(href="/admin/tasks")
                  i.fas.fa-tasks
                  span.nav-item Tasks  
          ul
              a(href="/", class="logout")
                i.fas.fa-sign-out-alt
                span.nav-item Log out
        section.main
               .main-top
                    h1 Task 
               .main-body
                   
                    button.newproject-button(data-modal-target="#modal") New task
                .modal#modal
                  .modal-header
                    .title New Task 
                    button(data-close-button, class="close-button") &times;
                  .modal-body
                     form(action="/admin/creattask", method="get")
                              .main-user-info
                                  .user-input-box
                                      label(for="Project Name ") Project Name
                                      select#propertyType.select.form-control.input-lg(  name='project'
                                      )
                                    
                                        each project in projects 
                                          li 
                                            option(value=project.projectname) #{project.projectname}
                                  .user-input-box
                                      label(for="Start date ") Start date 
                                      input(type="date", id="startdate ", name="startdate", placeholder="Enter start date" required)
                                  .user-input-box
                                      label(for="End date ") End date 
                                      input(type="date", id="enddate ", name="enddate", placeholder="Enter End date" required)    
                                  
                                  .user-input-box                            
                                      label(for="Description") Task description
                                      input(type="text", id="description", name="description", placeholder="Enter description" required, )
                                
                              .form-submit-btn
                              
                                  input(type="submit", value="Create Task")
                .main-body2  
                  each task in tasks 
                    .card 
                      .card-body                
                            p= `Task ID: ${task.taskid}`
                            p= `Desription: ${task.description}`
                            p= `Project ID: ${task.projectid}`
                            p= `Start date : ${task.startdate}`
                            p= `End Date: ${task.enddate}`

                      .info-btn
                      input(type="button" value="Delete Tasks" onclick="window.location.href='tasks?action=delete&taskid=#{task.taskid}'")
                   
